@model IEnumerable<SmartCost.Models.Material>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Malzeme Tablosu</h2>

<p>
    @Html.ActionLink("Malzeme Ekle", "Create")
</p>
<p>
    @Html.ActionLink("Birim Ekle", "Create", "UnitType")
</p>
<p>
    @Html.ActionLink("Malzeme Tipi Ekle", "Create", "MaterialTypes")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaterialType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Width)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thickness)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceOfUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thickness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceOfUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Görüntüle", "Details", new { id=item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>


